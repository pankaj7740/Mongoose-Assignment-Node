    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.15.0",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
